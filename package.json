{
  "name": "rest-express",
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx server/index.ts",
    "client:build": "npm --prefix client run build",
    "build": "npm run client:build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "./scripts/run-all-tests.sh",
    "validate": "./scripts/validate-deployment.sh",
    "validate:full": "npm run test:all && npm run validate",
    "db:push": "drizzle-kit push",
    "db:migrate": "tsx server/scripts/migrate.ts",
    "db:migrate:force": "tsx server/scripts/migrate.ts --force",
    "db:seed": "tsx server/scripts/seed-admin.ts",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "prepare": "husky install",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5000 && electron .\"",
    "electron:build": "npm run client:build --workspaces=false || echo skipping && electron-builder --win --x64",
    "electron:pack": "electron-builder --dir"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "electron-updater": "^6.6.2",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "memorystore": "^1.6.7",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.15.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.18.3",
    "ws": "^8.18.0",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@types/bcrypt": "^6.0.0",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "20.16.11",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/ws": "^8.5.13",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.4",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.25.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.20.5",
    "typescript": "5.6.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.dogerat.admin",
    "productName": "DogeRat Admin",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "desktop/config.json",
      "!**/*.map"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "hoanganh-hue",
        "repo": "lazala"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  },
  "lint-staged": {
    "*.{ts,js,html,css,scss,json,md}": "prettier --check"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
