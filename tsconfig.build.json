{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "sourceMap": false,
    "declaration": false,
    "removeComments": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["client", "node_modules", "build", "dist", "**/*.test.ts", "coverage"]
}

